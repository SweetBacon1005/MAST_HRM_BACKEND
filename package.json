{
  "name": "mast_backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "prisma generate && prisma db push --accept-data-loss",
    "vercel-build": "prisma generate && nest build",
    "db:push": "prisma db push --accept-data-loss && prisma generate",
    "db:push:force": "prisma db push --force-reset && prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db push --accept-data-loss && prisma generate && ts-node prisma/seed-basic.ts",
    "db:seed:force": "prisma db push --force-reset && prisma generate && ts-node prisma/seed-basic.ts",
    "db:seed:full": "prisma db push --accept-data-loss && prisma generate && ts-node prisma/seed.ts",
    "db:seed:test-data": "npm run build && node generate-test-data.js",
    "db:seed:test-data:sql": "node test-data-generator.js && node import-test-data.js",
    "db:seed:with-test-data": "npm run db:seed && npm run db:seed:test-data",
    "db:seed:with-test-data:sql": "npm run db:seed && npm run db:seed:test-data:sql",
    "db:clear:test-data": "node clear-test-data.js",
    "generate:test-sql": "node test-data-generator.js",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:timesheet": "jest --testPathPatterns=timesheet",
    "test:meeting-rooms": "jest --testPathPatterns=meeting-rooms",
    "test:news": "jest --testPathPatterns=news",
    "test:requests": "jest --testPathPatterns=requests",
    "test:user-profile": "jest --testPathPatterns=user-profile",
    "test:modules": "jest --testPathPatterns=\"(timesheet|meeting-rooms|news|requests|user-profile)\"",
    "test:cov:timesheet": "jest --testPathPatterns=timesheet --coverage --coverageReporters=text --coverageReporters=text-summary",
    "test:cov:meeting-rooms": "jest --testPathPatterns=meeting-rooms --coverage --coverageReporters=text --coverageReporters=text-summary",
    "test:cov:news": "jest --testPathPatterns=news --coverage --coverageReporters=text --coverageReporters=text-summary",
    "test:cov:requests": "jest --testPathPatterns=requests --coverage --coverageReporters=text --coverageReporters=text-summary",
    "test:cov:user-profile": "jest --testPathPatterns=user-profile --coverage --coverageReporters=text --coverageReporters=text-summary",
    "test:cov:modules": "jest --config jest.coverage.config.js --testPathPatterns=\"(timesheet|meeting-rooms|news|requests|user-profile)\" --coverage --coverageReporters=html --coverageReporters=text --coverageReporters=text-summary"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.15.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/luxon": "^3.7.1",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^10.0.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cache-manager": "^7.2.7",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cloudinary": "^2.8.0",
    "csv-writer": "^1.6.0",
    "exceljs": "^4.4.0",
    "isomorphic-dompurify": "^2.30.1",
    "luxon": "^3.7.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "papaparse": "^5.5.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/papaparse": "^5.3.16",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.15.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^uuid$": "uuid"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(uuid)/)"
    ]
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
