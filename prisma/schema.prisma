    free       Int
    note       String?  @db.VarChar(255)
    created_at DateTime @default(dbgenerated("CURRENT_TIMESTAMP")) @db.Timestamp(0)
    updated_at DateTime @updatedAt

    @@index([user_id])
    @@index([start_date, end_date])
}

model average_costs {
